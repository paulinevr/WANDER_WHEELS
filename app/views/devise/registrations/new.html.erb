<div class="signup">
  <div class="container mx-4">
      <h2 class="text-center">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :firstname,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "firstname", class: 'rounded-pill border border-dark' }, label_html: { class: 'text-uppercase' } %>
          <%= f.input :lastname,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "lastname", class: 'rounded-pill border border-dark' }, label_html: { class: 'text-uppercase' } %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'rounded-pill border border-dark' }, label_html: { class: 'text-uppercase' } %>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      hint_html: { class: 'text-white' },
                      input_html: { autocomplete: "new-password", class: 'rounded-pill border border-dark' }, label_html: { class: 'text-uppercase' } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: 'rounded-pill border border-dark' }, label_html: { class: 'text-uppercase' } %>
        </div>
        <div class="text-center">
          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn w-50 rounded-pill signup-button " %>
          </div>
         </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
