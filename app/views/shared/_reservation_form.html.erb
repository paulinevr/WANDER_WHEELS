<%= simple_form_for [@van, @reservation] do |f| %>
  <%= f.input :from, as: :date, start_year: Date.today.year,
                                end_year: Date.today.year + 2,
                                order: [:day, :month, :year]  %>
  <%= f.input :until, as: :date, start_year: Date.today.year,
                                  end_year: Date.today.year + 2,
                                  order: [:day, :month, :year]  %>
  <%= f.input :comment %>
  <%= f.submit "Make your reservation", class: "btn btn-primary" %>
<% end %>
