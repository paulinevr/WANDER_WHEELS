<div class="container">
  <div class="row">
    <div class="col col-md-4 col-lg-3">
      <% @vans.each do |van| %>
        <div class="card-trip">
          <img src="https://images.unsplash.com/photo-1594495894542-a46cc73e081a?q=80&w=2071&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" />
          <div class="card-trip-infos">
            <div>
              <h2><%= van.title %></h2>
              <p></p>
            </div>
            <h2 class="card-trip-pricing">Price/day: <%= van.price_per_day %></h2>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
