<%= simple_form_for @van, defaults: { input_html: { class: 'rounded-pill border border-dark' }, label_html: { class: 'text-uppercase' } } do |f| %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <div class="row">
    <div class="col-8">
      <%= f.input :title %>
    </div>
    <div class="col-4">
      <%= f.input :price_per_day %>
    </div>
  </div>
  <%= f.input :description %>
  <%= f.input :address %>
  <div class="row">
    <div class="col-6">
      <%= f.input :capacity %>
    </div>
    <div class="col-6">
      <%= f.input :mileage %>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <%= f.input :car_brand %>
    </div>
    <div class="col-6">
      <%= f.input :model %>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <%= f.input :fuel_type %>
    </div>
    <div class="col-6">
      <%= f.input :production_year %>
    </div>
  </div>

  <div class="text-center">
  <%= f.button :submit, "READY", class: "btn btn-primary w-50 rounded-pill submit-button" %>
  </div>

<% end %>
