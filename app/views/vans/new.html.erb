<div class="container py-4">
  <%= simple_form_for(@van) do |f| %>
     <div class="row">
      <div class="col-8">
        <%= f.input :title %>
      </div>
      <div class="col-4">
        <%= f.input :capacity %>
      </div>
    </div>
    <%= f.input :description %>
    <%= f.input :address %>
    <div class="row">
      <div class="col-6">
        <%= f.input :car_brand %>
      </div>
      <div class="col-6">
        <%= f.input :model %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.input :fuel_type %>
      </div>
      <div class="col-6">
        <%= f.input :mileage %>
      </div>
    </div>
     <div class="row">
      <div class="col-6">
        <%= f.input :production_year %>
      </div>
      <div class="col-6">
        <%= f.input :fuel_type %>
      </div>
    </div>
    <%= f.submit %>
  <% end %>
</div>
